extends layout

block content
  h1 To-Do App
  p Welcome to To-Do App

  h2 Tasks
  ul
    each task in tasks
      li.task
        span.task-title= task.title
        form(action=`/todos/${task.id}`, method='GET')
          button.btn.btn-view(type='submit') View
        form(action=`/todos/${task.id}`, method='POST')
          button.btn.btn-update(type='submit') Update
          input(type='hidden', name='_method', value='DELETE')
          button.btn.btn-delete(type='submit') Delete

  h2 New Task
  form.new-task-form(action='/todos', method='POST')
    label(for='title') Title:
    input.form-control(type='text', name='title', id='title')
    button.btn.btn-add(type='submit') Add Task
