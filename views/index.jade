extends layout

block content
  .container
    style.
      body {
        background-color: black;
        color: white;
      }
      .pradisha-list {
        font-size: 24px;
      }
      h2 {
        font-size: 20px;
        margin-bottom: 20px; /* Add margin-bottom for space */
      }
      .task {
        margin-bottom: 10px; /* Add margin-bottom to each task */
      }

    h1.text-center.font-weight-bold.mb-4 Welcome to To-Do App
    p.pradisha-list Pradisha's To-Do List

    h2 Tasks
    each task in tasks
      .task
        span.task-title= task.title
        form(action=`/todos/${task.id}`, method='GET' class='d-inline-block mr-2')
          button.btn.btn-primary(type='submit') View
        form(action=`/todos/${task.id}`, method='POST' class='d-inline-block')
          button.btn.btn-primary(type='submit') Update
          | &nbsp; <!-- Add a non-breaking space for gap -->
          input(type='hidden', name='_method', value='DELETE')
          button.btn.btn-danger(type='submit') Delete

    // Add margin-bottom to create a gap between last task and "New Task" section
    .task(style='margin-bottom: 20px;') 

    h2 New Task
    form.new-task-form(action='/todos', method='POST' class='new-task-form')
      .form-group
        label(for='title') Title:
        input.form-control(type='text', name='title', id='title')
      button.btn.btn-primary(type='submit') Add Task
